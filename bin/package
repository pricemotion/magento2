#!/bin/bash

set -euo pipefail
cd "$(dirname "$0")/.."

version=

while [[ $# -gt 0 ]]; do
	case $1 in
	--version)
		shift
		version="$1"
		shift
		;;
	*)
		echo "Usage: $0 [--version VERSION]" >&2
		exit 1
		;;
	esac
done

if [[ $version = "" ]]; then
	version="$(git describe --tags --match 'v*')"
fi

version="${version#v}"

out="$PWD/dist/pricemotion-magento2-$version.zip"

echo "Packaging $version..." >&2

tmp="$(mktemp -d)"
cleanup() { rm -rf "$tmp"; }
trap cleanup EXIT

git archive HEAD . | tar x -C "$tmp"

cd "$tmp"

echo "$(cat composer.json | jq '. | .version = $v' --arg v "$version")" > composer.json

version="$version" perl -p -i -e 's/\$VERSION\$/$ENV{version}/g' App/Constants.php

mkdir -p "$(dirname "$out")"
bsdtar cf "$out.$$" --format zip *
mv "$out.$$" "$out"

echo "$out"
