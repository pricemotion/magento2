#!/usr/bin/env bash

set -euo pipefail
cd "$(dirname "$0")/.."

upgrade=1

err_usage() {
	echo "Usage: $0 [--skip-upgrade]" >&2
	exit 1
}

while [[ $# -gt 0 ]]; do
	case "$1" in
		--skip-upgrade)
			upgrade=
			;;
		*)
			err_usage
			;;
	esac
	shift
done

package="$(bin/package --dirty)"

rm -rf artifacts
mkdir artifacts
ln "$package" "artifacts/${package##*/}"

jq '
	.repositories =
		[
			{
				type: "artifact",
				url: "../artifacts"
			}
		]
		+ (.repositories | map(select(.type != "artifact")))
' www/composer.json > www/composer.json.$$
mv www/composer.json.$$ www/composer.json

"vendor/bin/composer" -d www require --ignore-platform-reqs pricemotion/module-pricemotion

bin/clear-magento-cache

if [[ $upgrade ]]; then
	bin/magento setup:upgrade
fi
